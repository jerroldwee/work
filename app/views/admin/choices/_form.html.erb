<%= form_for([:admin, @product, @entry], :html => {:class => "simple-form simple-form-stacked"}) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this image from being saved:</h2>
      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Fill in the content below</legend>

    <%= f.label :inventory %>
    <%= f.text_field :inventory_count %>

    <%= f.label :color %>
    <%= f.select :color_id, Choice.color_selections %>

    <br/>

    <%= f.hidden_field :product_id %>
    <%= f.submit "Save Data", :class => "simple-button simple-button-primary button-positive" %>

  </fieldset>

<% end %>





