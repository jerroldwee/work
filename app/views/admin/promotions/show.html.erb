<div class="grid">
  <div class="unit-1">
    <div class="box">
      <p id="notice"><%= notice %></p>
      <p>
        <%= link_to 'Edit', edit_admin_promotion_path(@entry), :class => "button-positive", :style => "float : right" %>
        <h1><%= @entry.title %></h1>
      </p>
      <hr/>

      <table>
        <tr>
          <td><strong>Description</strong></td>
          <td>&nbsp; : &nbsp;</td>
          <td><%= @entry.description %></td>
        </tr>

        <tr>
          <td><strong>URL</strong></td>
          <td>&nbsp; : &nbsp;</td>
          <td><%= @entry.url %></td>
        </tr>

        <tr>
          <td><strong>Image</strong></td>
          <td>&nbsp; : &nbsp;</td>
          <td><%= image_tag @entry.upload.url(:small) if @entry.upload.exists? %></td>
        </tr>
      </table>

    </div>
  </div>
  <div class="unit-1">
    <div class="box">
      <%= link_to 'Back', admin_promotions_path, :class => "button" %>
    </div>
  </div>
</div>



