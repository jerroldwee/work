<form method="post" onsubmit="return false" target="uploadframe" class="tab-wrapper visual-try-on grid-auto visual-try-on" enctype="multipart/form-data">
  <div class="unit-1">
    <div class="container title-containers">
      <h2 class="active">Visual Try On <span class="instruction"></span></h2>
      <h2 >Visual Try On <span class="instruction">You can use our default photo for trying on our frame or upload your own photo &#x2193;</span></h2>
      <h2>Visual Try On <span class="instruction"></span></h2>
    </div>
  </div>
  <div class="unit-1-3">
    <div class="grid">
      <div class="unit-3-5">
        <ul class="visual-nav">
          <li class="browse active" jsclass="change-tab">Browse Product</li>
          <li class="upload upload-picture-button" jsclass="load-picture">Adjust Frame</li>
          <li class="help" jsclass="change-tab">Help</li>
        </ul>
      </div>
      <div class="unit-2-5 middle-contents">
        <div class="choose-type content active browse-content">
          Choose type:<br/>
          <ul class="gender-menu">
            <li jsclass="update-gender" class="selected"><a href="#" jsclass="update-gender" value="Male">Men</a></li>
            <li jsclass="update-gender"><a href="#" jsclass="update-gender" value="Female">Women</a></li>
            <li jsclass="update-gender"><a href="#" jsclass="update-gender" value="Unisex">Unisex</a></li>
          </ul>
          <input type='hidden' name='gender' value='Male'/>
        </div>
        <div class="choose-frame content upload-content">
          Choose frame:<br/>
          <ul class="frame-colours">
            <li class="selected" jsclass="select-frame-color" style="cursor:pointer">
              <a href="#" jsclass="select-frame-color">Blue</a>
              <br/>
              <img src="/assets/maple/215x100/small-01.jpg"/></a>
            </li>
            <li><a href="#">Black<br/><img src="/assets/maple/215x100/small-01.jpg"/></a></li>
            <li><a href="#">Red<br/><img src="/assets/maple/215x100/small-01.jpg"/></a></li>
          </ul>
        </div>
        <div class="choose-frame content help-content">
          <!-- help content -->
          Also available on: <br/><br/>
          <%= link_to image_tag("appstore.png"), "https://itunes.apple.com/sg/app/figoeyewear/id734368951?mt=8", :target => "_blank" %>
          <%= image_tag "playstore.png" %>
        </div>

      </div>
    </div>
  </div>
  <div class="tab-contents unit-2-3">
    <div class="browse-content active">
      <!-- browse content -->
      <input type='hidden' name='visual' value='1'/>
      <div class="grid-auto product-listing">
        <div class="unit-1">
          <div class="product-filter">
            <%= render(:partial => "products/filter_list.html.erb") %>
          </div>
        </div>
        <div class="unit-1">
          <div class="grid-auto products content-wrapper">
            <%= render(:partial => "products/list.html.erb").to_s.gsub("show-product", "try-product").html_safe %>
          </div>
        </div>
      </div>
    </div>
    <div class="upload-content">
      <!-- upload-content -->
      <div class="grid-auto edit-photo">
        <input class='visual-input left' type='hidden' name='left' value='35'/>
        <input class='visual-input top' type='hidden' name='top' value='20'/>
        <input class='visual-input width' type='hidden' name='width' value='30'/>
        <input class='visual-input title' type='hidden' name='title' value=''/>
        <input class='visual-input height' type='hidden' name='height' value='15'/>
        <input class='visual-input item-id' type='hidden' name='id' value=''/>
        <input class='visual-input product-id' type='hidden' name='product_id' value=''/>
        <input class='visual-input color-id' type='hidden' name='color_id' value=''/>
        <input class='visual-input sample-man' type='hidden' name='sample_man' value='0'/>
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
        <div class="unit-4-5 photo-container">
          <div class="visual-photo">
            <img class="male-image" src="/assets/photo-sample-man.png"/>
            <img class="female-image" src="/assets/photo-sample-woman.png"/>
          </div>
          <div jsclass='image-resizer' class='glass-frame' style='top : 20%; left : 35%; width : 30%; height : 15%' wd='30%' hg='15%' top='20%' left='35%'>
            <div class='knob knob1' jsclass='knob' mul='-1,-1'></div>
            <div class='knob knob2' jsclass='knob' mul='1,-1'></div>
            <div class='knob knob3' jsclass='knob' mul='-1,1'></div>
            <div class='knob knob4' jsclass='knob' mul='1,1'></div>
          </div>
        </div>
        <div class="unit-1-5">
          <div class="submit-photo-nav">
            <% if current_user %>
            <div class="submit-photo-button save-button" style="overflow : hidden; cursor : pointer"><a href="#">Upload</a><input type='file' name='upload' jsclass='upload-button' style="width : 100%; height : 40px; border : 0px none; opacity:0.01; position : absolute; top : 0px; left : 0px; cursor : pointer"/></div>
            <div class="submit-photo-button save-button" style="cursor:pointer" jsclass="save-visual-try-on"><a class='save-text' href="#">Save</a></div>
            <div class="facebook-photo-button save-button" style="cursor:pointer" jsclass="save-and-post-to-facebook"><a href="#">Post to Facebook</a></div>
            <% else %>
              <div class="submit-photo-button">
                <%= link_to "Sign in with Facebook to your photo", "/auth/facebook", id: "sign_in" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="help-content">
      <!-- help-content -->
      <div class="grid-auto">
        <div class"unit-1-1">
        </div>
        <div class="unit-1-2">
          <%= image_tag "help1.png" %>
        </div>
        <div class="unit-1-2">
          <%= image_tag "help2.png" %>
        </div>
      </div>
    </div>
  </div>
</form>
